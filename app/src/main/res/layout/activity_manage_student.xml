<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageStudentActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/one"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRUD"
        android:fontFamily="@font/latob"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="266dp"
        android:textColor="#B7A496"
        android:textSize="34dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android MySQL"
        android:fontFamily="@font/latob"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:textColor="#B7A496"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/txNim"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Masukkan NIM"
        android:inputType="number"
        android:layout_marginTop="340dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/lator"
        android:textAlignment="center"
        android:background="@drawable/input"
        android:padding="13dp"
        android:gravity="center_horizontal"
        android:elevation="5dp"/>

    <EditText
        android:id="@+id/txName"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/txNim"
        android:hint="Masukkan Nama"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:fontFamily="@font/lator"
        android:background="@drawable/input"
        android:padding="13dp"
        android:gravity="center_horizontal"
        android:elevation="5dp"/>


    <EditText
        android:id="@+id/txAddress"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Masukkan jurusan"
        android:inputType="textMultiLine"
        android:layout_below="@+id/txName"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="@drawable/input"
        android:padding="13dp"
        android:fontFamily="@font/lator"
        android:gravity="center_horizontal"
        android:elevation="5dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_below="@+id/txAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="Jenis Kelamin"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_below="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioBoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Pria" />

        <RadioButton
            android:id="@+id/radioGirl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wanita" />
    </RadioGroup>

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:text="Tambah Mahasiswa"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:fontFamily="@font/latob"
        android:layout_centerHorizontal="true"
        android:padding="13dp"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="ubah"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:fontFamily="@font/latob"
        android:padding="13dp"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="hapus"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:fontFamily="@font/latob"
        android:padding="13dp"/>

</RelativeLayout>